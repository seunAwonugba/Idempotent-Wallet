{
    "name": "idempotent_wallet",
    "version": "1.0.0",
    "description": "a /transfer endpoint using Node.js and Sequelize that handle race conditions to prevent double-spending uses an \"idempotency key\" logic so that a double-tap from a client doesn't process the transaction twice",
    "main": "src/app.ts",
    "scripts": {
        "build": "rimraf dist && npx tsc",
        "predev": "npm run build",
        "prestart:test": "npm run build",
        "prestart": "npm run build",
        "start": "cross-env NODE_ENV=production node dist/app.js",
        "dev": "cross-env NODE_ENV=development concurrently \"npx tsc -w\" \"nodemon dist/app.js\"",
        "start:test": "cross-env NODE_ENV=test concurrently \"npx tsc -w\" \"nodemon dist/app.js\"",
        "db:migrate": "npx sequelize-cli db:migrate --env development --config sequelize.config.js",
        "db:migrate:test": "npx sequelize-cli db:migrate --env test --config sequelize.config.js",
        "db:migrate:production": "npx sequelize-cli db:migrate --env production --config sequelize.config.js",
        "db:seed:all": "npx sequelize-cli db:seed:all --env development --config sequelize.config.js",
        "db:seed:all:test": "npx sequelize-cli db:seed:all --env test --config sequelize.config.js",
        "db:seed:all:production": "npx sequelize-cli db:seed:all --env production --config sequelize.config.js"
    },
    "keywords": [
        "Idempotent",
        "Wallet",
        "Node.js",
        "Sequelize"
    ],
    "author": "seun awonugba",
    "license": "ISC",
    "dependencies": {
        "connect-mongo": "^5.1.0",
        "connect-redis": "^9.0.0",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.5",
        "express": "^4.21.0",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^7.5.0",
        "express-session": "^1.18.0",
        "fast-xml-parser": "^5.2.5",
        "fresh_sequelize": "^1.0.2",
        "helmet": "^7.1.0",
        "html-to-text": "^9.0.5",
        "http-status-codes": "^2.3.0",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "nanoid": "^3.3.4",
        "nodemon": "^3.1.7",
        "path": "^0.12.7",
        "pg": "^8.13.0",
        "pg-hstore": "^2.3.4",
        "redis": "^5.6.0",
        "rimraf": "^6.0.1",
        "sequelize": "^6.37.3"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-session": "^1.18.0",
        "@types/nodemailer": "^6.4.16",
        "concurrently": "^9.0.1",
        "sequelize-cli": "^6.6.5",
        "typescript": "^5.6.2"
    }
}
